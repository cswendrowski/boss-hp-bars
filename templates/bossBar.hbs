<div class="bosshpbar" name={{id}}>
    {{!-- <p style="float: right; position: relative; top: -10px">{{width}} | {{value}} | {{damageWidth}}</p> --}}
    {{#if showName}}
    <p class="bossname">{{name}}</p>
    {{/if}}
    <div class="hp-bg hp-box">
        {{#if noHealth}} 
        <div class="hp-fill" style="width: 0; display: none">
        </div>
        {{else}}
        <div class="hp-fill" style="width: {{width}}">
        </div>
        {{/if}}
        {{#if noHealthDamage}} 
        <div class="damage-fill" style="width: 0; display: none">
        </div>
        {{else}}
        <div class="damage-fill" style="width: {{damageWidth}}">
        </div>
        {{/if}}
    </div>
</div>
